<UserControl x:Class="EasySave.WPF.Controls.DashboardPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="TxtTitle" Text="Dashboard" FontSize="22" FontWeight="Bold"
                   Foreground="{DynamicResource TextPrimary}" Margin="0,0,0,24"/>
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <WrapPanel x:Name="CardsPanel" Orientation="Horizontal"/>
        </ScrollViewer>
    </Grid>
</UserControl>
