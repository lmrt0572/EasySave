<UserControl x:Class="EasySave.WPF.Controls.ProgressCardControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Border x:Name="CardBorder" CornerRadius="8" Padding="10,5" Margin="0,0,0,4"
            Background="{DynamicResource BgCard}">
        <Border.Effect>
            <DropShadowEffect BlurRadius="4" ShadowDepth="1" Opacity="0.03" Color="#553f2a"/>
        </Border.Effect>
        <StackPanel>
            <Grid x:Name="TopRow" Margin="0,0,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock x:Name="TxtJobName" FontSize="11" FontWeight="SemiBold" 
                           Foreground="{DynamicResource TextPrimary}" VerticalAlignment="Center"/>
                <Border x:Name="StatusBadge" Grid.Column="1" CornerRadius="4" Padding="5,1" Margin="0,0,6,0" VerticalAlignment="Center">
                    <TextBlock x:Name="TxtStatus" FontSize="8" FontWeight="SemiBold"/>
                </Border>
                <StackPanel x:Name="ControlsPanel" Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center"/>
            </Grid>
            <Grid x:Name="ProgressRow" Margin="0,2,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Border x:Name="ProgressTrack" Background="{DynamicResource BorderLight}" CornerRadius="2" Height="3">
                    <Grid x:Name="ProgressInner">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0*"/>
                            <ColumnDefinition Width="100*"/>
                        </Grid.ColumnDefinitions>
                        <Border x:Name="ProgressFill" Grid.Column="0" CornerRadius="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                    </Grid>
                </Border>
                <TextBlock x:Name="TxtPercent" Grid.Column="1" Text="0%" FontSize="10" FontWeight="Bold" 
                           Foreground="{DynamicResource AccentPrimary}" Margin="6,0,0,0" VerticalAlignment="Center"/>
            </Grid>
            <Grid x:Name="FileRow" Margin="0,2,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock x:Name="TxtCurrentFile" FontSize="9" Foreground="{DynamicResource TextMuted}" TextTrimming="CharacterEllipsis"/>
                <TextBlock x:Name="TxtFilesCount" Grid.Column="1" FontSize="9" Foreground="{DynamicResource TextSecondary}" VerticalAlignment="Center"/>
            </Grid>
        </StackPanel>
    </Border>
</UserControl>
