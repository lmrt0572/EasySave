<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ===== THEME: BEIGE CLASSIQUE ===== -->

    <!-- Background -->
    <SolidColorBrush x:Key="BgPrimary" Color="#E7D3C1"/>
    <SolidColorBrush x:Key="BgSidebar" Color="#553f2a"/>
    <SolidColorBrush x:Key="BgCard" Color="#F2E0CE"/>
    <SolidColorBrush x:Key="BgInput" Color="#EBCFB8"/>
    <SolidColorBrush x:Key="BgSidebarHover" Color="#6B5239"/>
    <SolidColorBrush x:Key="BgSidebarActive" Color="#a67847"/>

    <!-- Text -->
    <SolidColorBrush x:Key="TextPrimary" Color="#553f2a"/>
    <SolidColorBrush x:Key="TextSecondary" Color="#7A6147"/>
    <SolidColorBrush x:Key="TextMuted" Color="#9C8468"/>
    <SolidColorBrush x:Key="TextOnDark" Color="#E7D3C1"/>
    <SolidColorBrush x:Key="TextOnDarkMuted" Color="#B8A08A"/>
    <SolidColorBrush x:Key="TextOnAccent" Color="#F5E6D3"/>

    <!-- Accent -->
    <SolidColorBrush x:Key="AccentPrimary" Color="#a67847"/>
    <SolidColorBrush x:Key="AccentHover" Color="#8B6232"/>
    <SolidColorBrush x:Key="AccentLight" Color="#C99B6D"/>

    <!-- Border -->
    <SolidColorBrush x:Key="BorderDefault" Color="#C9A882"/>
    <SolidColorBrush x:Key="BorderLight" Color="#DBBFA0"/>

    <!-- Status -->
    <SolidColorBrush x:Key="StatusSuccess" Color="#5A7247"/>
    <SolidColorBrush x:Key="StatusDanger" Color="#9B4D4D"/>
    <SolidColorBrush x:Key="StatusWarning" Color="#B8860B"/>
    <SolidColorBrush x:Key="StatusSuccessBg" Color="#E8F0E2"/>
    <SolidColorBrush x:Key="StatusDangerBg" Color="#F5E3E3"/>
    <SolidColorBrush x:Key="StatusWarningBg" Color="#F5EEDF"/>

</ResourceDictionary>
