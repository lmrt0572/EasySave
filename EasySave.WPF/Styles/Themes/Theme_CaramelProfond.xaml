<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ===== THEME: CARAMEL PROFOND ===== -->

    <!-- Background -->
    <SolidColorBrush x:Key="BgPrimary" Color="#DFC4A8"/>
    <SolidColorBrush x:Key="BgSidebar" Color="#3E2415"/>
    <SolidColorBrush x:Key="BgCard" Color="#E8D2BA"/>
    <SolidColorBrush x:Key="BgInput" Color="#D6BA9E"/>
    <SolidColorBrush x:Key="BgSidebarHover" Color="#5A3824"/>
    <SolidColorBrush x:Key="BgSidebarActive" Color="#B5651D"/>

    <!-- Text -->
    <SolidColorBrush x:Key="TextPrimary" Color="#3E2415"/>
    <SolidColorBrush x:Key="TextSecondary" Color="#5E4228"/>
    <SolidColorBrush x:Key="TextMuted" Color="#8A6C4E"/>
    <SolidColorBrush x:Key="TextOnDark" Color="#DFC4A8"/>
    <SolidColorBrush x:Key="TextOnDarkMuted" Color="#B09878"/>
    <SolidColorBrush x:Key="TextOnAccent" Color="#F5E6D3"/>

    <!-- Accent -->
    <SolidColorBrush x:Key="AccentPrimary" Color="#B5651D"/>
    <SolidColorBrush x:Key="AccentHover" Color="#954D12"/>
    <SolidColorBrush x:Key="AccentLight" Color="#D48842"/>

    <!-- Border -->
    <SolidColorBrush x:Key="BorderDefault" Color="#C4A07A"/>
    <SolidColorBrush x:Key="BorderLight" Color="#D4B494"/>

    <!-- Status -->
    <SolidColorBrush x:Key="StatusSuccess" Color="#5A7247"/>
    <SolidColorBrush x:Key="StatusDanger" Color="#9B4D4D"/>
    <SolidColorBrush x:Key="StatusWarning" Color="#B8860B"/>
    <SolidColorBrush x:Key="StatusSuccessBg" Color="#E8F0E2"/>
    <SolidColorBrush x:Key="StatusDangerBg" Color="#F5E3E3"/>
    <SolidColorBrush x:Key="StatusWarningBg" Color="#F5EEDF"/>

</ResourceDictionary>
