<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ===== THEME: IVOIRE CRÃˆME ===== -->

    <!-- Background -->
    <SolidColorBrush x:Key="BgPrimary" Color="#F2ECE0"/>
    <SolidColorBrush x:Key="BgSidebar" Color="#5C4033"/>
    <SolidColorBrush x:Key="BgCard" Color="#FAF6EE"/>
    <SolidColorBrush x:Key="BgInput" Color="#EDE6D8"/>
    <SolidColorBrush x:Key="BgSidebarHover" Color="#6E5243"/>
    <SolidColorBrush x:Key="BgSidebarActive" Color="#8B6F4E"/>

    <!-- Text -->
    <SolidColorBrush x:Key="TextPrimary" Color="#4A3828"/>
    <SolidColorBrush x:Key="TextSecondary" Color="#6B5A44"/>
    <SolidColorBrush x:Key="TextMuted" Color="#9C8A72"/>
    <SolidColorBrush x:Key="TextOnDark" Color="#F2ECE0"/>
    <SolidColorBrush x:Key="TextOnDarkMuted" Color="#C4B8A4"/>
    <SolidColorBrush x:Key="TextOnAccent" Color="#FFF8F0"/>

    <!-- Accent -->
    <SolidColorBrush x:Key="AccentPrimary" Color="#8B6F4E"/>
    <SolidColorBrush x:Key="AccentHover" Color="#725A3C"/>
    <SolidColorBrush x:Key="AccentLight" Color="#A8906E"/>

    <!-- Border -->
    <SolidColorBrush x:Key="BorderDefault" Color="#D4C8B4"/>
    <SolidColorBrush x:Key="BorderLight" Color="#E0D8C8"/>

    <!-- Status -->
    <SolidColorBrush x:Key="StatusSuccess" Color="#5A7247"/>
    <SolidColorBrush x:Key="StatusDanger" Color="#9B4D4D"/>
    <SolidColorBrush x:Key="StatusWarning" Color="#B8860B"/>
    <SolidColorBrush x:Key="StatusSuccessBg" Color="#E8F0E2"/>
    <SolidColorBrush x:Key="StatusDangerBg" Color="#F5E3E3"/>
    <SolidColorBrush x:Key="StatusWarningBg" Color="#F5EEDF"/>

</ResourceDictionary>
