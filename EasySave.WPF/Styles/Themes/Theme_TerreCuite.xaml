<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ===== THEME: TERRE CUITE ===== -->

    <!-- Background -->
    <SolidColorBrush x:Key="BgPrimary" Color="#E0C0A0"/>
    <SolidColorBrush x:Key="BgSidebar" Color="#6B3A20"/>
    <SolidColorBrush x:Key="BgCard" Color="#ECDCC0"/>
    <SolidColorBrush x:Key="BgInput" Color="#D8B898"/>
    <SolidColorBrush x:Key="BgSidebarHover" Color="#804E30"/>
    <SolidColorBrush x:Key="BgSidebarActive" Color="#C06030"/>

    <!-- Text -->
    <SolidColorBrush x:Key="TextPrimary" Color="#5A3018"/>
    <SolidColorBrush x:Key="TextSecondary" Color="#7A4E30"/>
    <SolidColorBrush x:Key="TextMuted" Color="#9C7458"/>
    <SolidColorBrush x:Key="TextOnDark" Color="#E0C0A0"/>
    <SolidColorBrush x:Key="TextOnDarkMuted" Color="#C0A080"/>
    <SolidColorBrush x:Key="TextOnAccent" Color="#FFF0E0"/>

    <!-- Accent -->
    <SolidColorBrush x:Key="AccentPrimary" Color="#C06030"/>
    <SolidColorBrush x:Key="AccentHover" Color="#A04820"/>
    <SolidColorBrush x:Key="AccentLight" Color="#D88050"/>

    <!-- Border -->
    <SolidColorBrush x:Key="BorderDefault" Color="#C8A078"/>
    <SolidColorBrush x:Key="BorderLight" Color="#D8B898"/>

    <!-- Status -->
    <SolidColorBrush x:Key="StatusSuccess" Color="#5A7247"/>
    <SolidColorBrush x:Key="StatusDanger" Color="#9B4D4D"/>
    <SolidColorBrush x:Key="StatusWarning" Color="#B8860B"/>
    <SolidColorBrush x:Key="StatusSuccessBg" Color="#E8F0E2"/>
    <SolidColorBrush x:Key="StatusDangerBg" Color="#F5E3E3"/>
    <SolidColorBrush x:Key="StatusWarningBg" Color="#F5EEDF"/>

</ResourceDictionary>
