<Window x:Class="EasySave.WPF.Views.WelcomeView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ProSoft — EasySave 2.0" Height="600" Width="900"
        WindowStartupLocation="CenterScreen" Background="{DynamicResource BgPrimary}"
        Icon="/Assets/Branding/logo_sidebar.png"
        FontSize="12" FontFamily="Segoe UI" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/><RowDefinition Height="Auto"/>
            <RowDefinition Height="32"/><RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="1" HorizontalAlignment="Center">
            <Border HorizontalAlignment="Center" Margin="0,0,0,12">
                <Border.Effect><DropShadowEffect BlurRadius="24" ShadowDepth="4" Opacity="0.12" Color="#553f2a"/></Border.Effect>
                <Image Source="/Assets/Branding/logo_welcome.png" Width="320" Height="320" RenderOptions.BitmapScalingMode="HighQuality"/>
            </Border>
            <TextBlock Text="ProSoft" FontSize="34" FontWeight="Bold" Foreground="{DynamicResource TextPrimary}" HorizontalAlignment="Center"/>
            <TextBlock Text="EasySave 2.0" FontSize="16" Foreground="{DynamicResource TextMuted}" HorizontalAlignment="Center" Margin="0,2,0,0"/>
            <TextBlock Text="Enterprise Backup Solution" FontSize="12" Foreground="{DynamicResource TextOnDarkMuted}" HorizontalAlignment="Center" Margin="0,2,0,24"/>
            <Button x:Name="BtnLaunch" Content="Launch Application" Style="{StaticResource BtnLaunch}" HorizontalAlignment="Center" Click="BtnLaunch_Click"/>
        </StackPanel>
        <StackPanel Grid.Row="3" HorizontalAlignment="Center" Margin="0,0,0,28">
            <TextBlock Text="Copyright © ProSoft — All rights reserved" FontSize="10" Foreground="{DynamicResource TextMuted}" HorizontalAlignment="Center"/>
            <TextBlock Text="Rayane HASSANI — Léo Martin — Bastien Ledoux" FontSize="9" Foreground="{DynamicResource TextOnDarkMuted}" HorizontalAlignment="Center" Margin="0,4,0,0"/>
        </StackPanel>
    </Grid>
</Window>
